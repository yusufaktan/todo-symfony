<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <style>
        body, html {
            height: 100%;
            margin: 0;
            background-color: #f4f7f9;
        }
        .main-container {
            margin: 20px;
            width: 100%;
            max-width: 1200px;
            position: absolute;
            transform: translate(-50%, -50%);
            top: 50%;
            left: 50%;
        }
        .card-header, .card-body {
            background-color: #ffffff;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }
        h2 {
            color: #2d3436;
        }
        .card-header h4 {
            color: #00b894;
        }
        table {
            width: 100%;
            margin: auto;
        }
        th, td {
            padding: 15px;
            text-align: left;
        }
        th {
            background-color: #00cec9;
        }
        td {
            background-color: #f1f2f6;
        }
        .chart-container {
            padding: 20px;
            text-align: center;
        }
        .task-stats p {
            font-size: 18px;
            color: #2d3436;
        }
        .table-responsive {
            max-height: 320px;
            overflow-y: auto;
        }
    </style>
</head>
<body>
<div class="container main-container">
    <div class="row justify-content-center align-items-stretch">
        <div class="col-12 text-center mb-4">
            <div class="card">
                <div class="card-body">
                    <h2>Total Duration: {{ weekCount }} Weeks {{ extraTime }} Hours</h2>
                </div>
            </div>
        </div>
    </div>
    <div class="row justify-content-center align-items-stretch">
        <div class="col-md-6 mb-4">
            <div class="card h-100">
                <div class="card-header">
                    <h4>Task Details</h4>
                </div>
                <div class="card-body table-responsive">
                    <table class="table">
                        <thead>
                        <tr>
                            <th>TASK ID</th>
                            <th>DEVELOPER NAME</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for taskAssignment in taskAssignments %}
                            {% for developer in taskAssignment.developers %}
                                <tr>
                                    <td>{{ taskAssignment.task }}</td>
                                    <td>{{ developer }}</td>
                                </tr>
                            {% endfor %}
                        {% else %}
                            <tr>
                                <td colspan="2">No tasks assigned.</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="col-md-6 mb-4">
            <div class="card h-100">
                <div class="card-header">
                    <h4>Total Number of Tasks: {{ taskCount }}</h4>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6 task-stats">
                            <p><strong>Completed Tasks:</strong> {{ finishedTasksCount }}</p>
                            <p><strong>Uncompleted Tasks:</strong> {{ unfinishedTasksCount }}</p>
                        </div>
                        <div class="col-md-6 chart-container">
                            <canvas id="taskChart" width="300" height="300"></canvas>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    const ctx = document.getElementById('taskChart').getContext('2d');
    const taskChart = new Chart(ctx, {
        type: 'doughnut',
        data: {
            labels: ['Completed Tasks', 'Uncompleted Tasks'],
            datasets: [{
                label: 'Task DurumlarÄ±',
                data: [16, 0],
                backgroundColor: ['#00b894', '#d63031'],
                hoverBackgroundColor: ['#55efc4', '#e17055'],
                borderColor: '#fff',
                borderWidth: 2
            }]
        },
        options: {
            responsive: true,
            plugins: {
                legend: {
                    display: true,
                    position: 'bottom',
                    labels: {
                        boxWidth: 20,
                        font: {
                            size: 14
                        }
                    }
                },
                tooltip: {
                    bodyFont: {
                        size: 14
                    },
                    padding: 10
                }
            },
            cutout: '60%',
        }
    });
</script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>